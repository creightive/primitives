{
  "name": "@creightive/ui",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "exports": {
    "./styles.css": "./dist/styles.css",
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build:css": "tailwind src/css/main.css -o dist/styles.css",
    "build:js": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "build": "concurrently \"pnpm build:css\" \"pnpm build:js\"",
    "dev:css": "tailwind src/css/main.css -o dist/styles.css --watch",
    "dev:js": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "dev": "concurrently \"pnpm dev:css\" \"pnpm dev:js\"",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@creightive/tailwind-systems": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "react": "^18.2.0",
    "tailwindcss": "^3.3.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7"
  }
}
